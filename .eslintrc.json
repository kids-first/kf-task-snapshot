{
  "extends": "airbnb-base",
  "env": {
    "mocha": true
  },
  "rules": {
    "arrow-body-style": ["error", "always"],
    "camelcase": "off",
    "no-console": "off",
    "no-param-reassign": [
      "error", 
      { 
        "props": true, 
        "ignorePropertyModificationsFor": ["options"] 
      }
    ],
    "no-underscore-dangle": [
      "error", 
      { 
        "allow": ["_status", "_links"] 
      }
    ],
    "no-unused-vars": "off",
    "no-use-before-define": "off"
  }
}